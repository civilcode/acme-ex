FROM bitwalker/alpine-elixir-phoenix as builder

ENV PORT=4000 \
    MIX_ENV=dev

RUN mkdir /app
WORKDIR /app
ADD . /app

RUN mix do local.hex --force, local.rebar --force
RUN mix do deps.get, deps.compile

WORKDIR /app/apps/magasin_web/assets
RUN npm install

WORKDIR /app

EXPOSE 4000

CMD ["/bin/bash"]
