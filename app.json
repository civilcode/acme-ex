{
  "name": "Magasin platform",
  "description": "Civilcode's Reference Application",
  "repository": "https://github.com/civilcode/magasin",
  "addons": [
    "heroku-postgresql:hobby-dev",
    "papertrail:choklad"
  ],
  "env": {
    "DATABASE_POOL_SIZE": {
      "description": "Database pool size",
      "value": "5"
    },
    "MIX_ENV": "staging",
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "SETUP_BY": {
      "description": "Who initiated this setup",
      "value": "CivilCode Inc"
    }
  },
  "scripts": {
    "postdeploy": "/app/bin/magasin_platform migrate"
  }
}
